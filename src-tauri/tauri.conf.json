{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Client",
  "version": "0.1.0",
  "identifier": "pro.tricko.ai-client",
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "publisher": "robertpakalns",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}
